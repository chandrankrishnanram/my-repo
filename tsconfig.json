{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES5",
    "jsx": "preserve",
    "noImplicitAny": false,
    "lib": [
      "es6",
      "dom",
      "ESNext",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strictNullChecks": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": false,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "defintions",
    "packages/node_modules",
    "packages/definations"
  ]
}
